    <div class="sidebox box widget">
        <form class="searchform" method="get">
            <input type="text" id="s2" name="s" value="Arama" onfocus="this.value=''" onblur="this.value='Arama'" />
        </form>
    </div>
    <!-- /.widget -->

    <div class="sidebox box widget">
        <h3 class="widget-title section-title">Popüler Bloglar</h3>
        <ul class="post-list">
            @foreach (var item in ViewBag.Projects)
            {
                <li>
                    <figure class="frame pull-left">
                        <div class="icon-overlay"><a href="@Url.Action("BlogDetail","Home", new { ID = item.ID })"><img width="70" src="@String.Format("data:image/gif;base64,{0}", Convert.ToBase64String(item.Image))" alt="" /> </a></div>
                    </figure>
                    <div class="meta">
                        <em><span class="date">@item.CreatedDate.ToShortDateString()</span><span class="comments"><a href="#">@item.Comments.Count<i class="icon-chat-1"></i></a></span></em>
                        <h5><a href="@Url.Action("BlogDetail","Home", new { ID = item.ID })">@item.Subject</a></h5>
                    </div>
                </li>
            }
        </ul>
        <!-- /.post-list -->
