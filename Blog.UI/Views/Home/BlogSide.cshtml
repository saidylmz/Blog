
    @{ 
        ViewBag.Projects = new Blog.BLL.Classes.ProjectController().GetAllProjects().Where(x => x.TagDetails.Any(y => y.Tag.Name.Contains("Blog"))).OrderByDescending(x => x.Comments.Count()).Take(3);
    }
<aside class="col-md-4 col-sm-12 sidebar">
    <div class="sidebox box widget">
        <h3 class="widget-title section-title">Görünüm</h3>
        <a href="blog.html" class="btn btn-small hint--top active" data-hint="Liste Görünüm"><i class="icon-menu-1"></i></a>
        <a href="blog2.html" class="btn btn-small hint--top" data-hint="Grid Görünüm"><i class="icon-th-large"></i></a>
