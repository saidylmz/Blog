@model IEnumerable<Blog.DAL.Classes.Comment>
@{
    ViewBag.Title = "Comment";
    Layout = "~/Views/Shared/_adminLayout.cshtml";
}
@section SelectedList{
    <script>
        $('li.secim:nth-of-type(5)').addClass("active");
    </script>
}
<div class="box">
    <div class="box-header">
        <h3 class="box-title">Projects</h3>
    </div>
    <!-- /.box-header -->
    <div class="box-body">
        <table id="example1" class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>Name Surname</th>
                    <th width="300px">Content</th>
                    <th>Email</th>
                    <th>Website</th>
                    <th>Created Date</th>
                    <th>Project</th>
                    <th>Parent</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.NameSurname</td>
                        <td>@item.Content</td>
                        <td>@item.Email</td>
                        <td><a href="@item.Website">@item.Website</a></td>
                        <td> C: @item.CreatedDate.ToString("dd.MM.yyyy") </td>
                        <td>@item.Project.Subject</td>
                        <td>
                            @item.Parent.Content
                        </td>
                        <td>
                            <a onclick="DeleteComment(@item.ID)" class="btn"><i style="color:red" class="fa fa-remove fa-2x"></i></a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <!-- /.box-body -->
</div>
<script>
    function DeleteComment(id) {
        Swal.fire({
            title: 'Are you sure?',
            text: "You won't be able to revert this!",
            icon: 'warning',
            showCancelButton: true,
            confirmButtonColor: '#3085d6',
            cancelButtonColor: '#d33',
            confirmButtonText: 'Yes, delete it!'
        }).then((result) => {
            if (result.value) {
                $.ajax({
                    url: "/Admin/DeleteComment",
                    type: "POST",
                    data: { id },
                    success: function () {
                        location.reload();
                    },
                    error: function () {

                    }
                })
            }
        })
    }
</script>
