@model IEnumerable<Blog.DAL.Classes.Tag>
@{
    ViewBag.Title = "Tag";
    Layout = "~/Views/Shared/_adminLayout.cshtml";
}
@section SelectedList{
    <script>
        $('li.secim:nth-of-type(4)').addClass("active");
    </script>
}
<div class="container">
    <div class="row" style="margin-top:30px">
        <div class="box">
            <div class="box-header">
                <h3 class="box-title">Projects</h3>
            </div>
            <div class="box-body">
                <table id="example1" class="table table-bordered table-striped">
                    <thead>
                        <tr>
                            <th width="25px">ID</th>
                            <th width="1000px">Name</th>
                            <th><a onclick="AddTag()" class="btn btn-success">Add Tag</a></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.ID</td>
                                <td>@item.Name</td>
                                <td>
                                    <a onclick="DeleteTag(@item.ID)" class="btn" color:red"><i class="fa fa-remove fa-2x"></i></a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
<script>
    function DeleteTag(id) {
        Swal.fire({
            title: 'Are you sure?',
            text: "You won't be able to revert this!",
            icon: 'warning',
            showCancelButton: true,
            confirmButtonColor: '#3085d6',
            cancelButtonColor: '#d33',
            confirmButtonText: 'Yes, delete it!'
        }).then((result) => {
            if (result.value) {
                $.ajax({
                    url: "/Admin/DeleteTag",
                    type: "POST",
                    data: { id },
                    success: function () {
                        location.reload();
                    },
                    error: function () {

                    }
                })
            }
        })
    }
    function AddTag() {
        Swal.fire({
            title: 'Submit tag name',
            input: 'text',
            inputAttributes: {
                autocapitalize: 'off'
            },
            showCancelButton: true,
            confirmButtonText: 'Add',
            showLoaderOnConfirm: true,
            preConfirm: (name) => {
                $.ajax({
                    url: "/Admin/AddTag",
                    type: "POST",
                    data: { name },
                    success: function () {
                        location.reload();
                    },
                    error: function () {

                    }
                })
            },
            allowOutsideClick: () => !Swal.isLoading()
        })
    }
</script>


